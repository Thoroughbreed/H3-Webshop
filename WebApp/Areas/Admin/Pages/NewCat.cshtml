@page
@model WebApp.Areas.Admin.Pages.NewCatModel
@{
}
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Category.CategoryID" />
            <div class="form-group">
                <label asp-for="Category.Category">Kategori</label>
                <input asp-for="Category.Category" class="form-control" type="text" size="100%" />
                <span class="text-danger" asp-validation-for="Category.Category"></span>
            </div>
            <button type="submit" class="btn btn-outline-danger">Gem ændringer</button>
            <a asp-area="Admin" asp-page="./DeleteCat" asp-route-id="@Model.Category.CategoryID" class="btn btn-danger">Slet kategori</a>
        </form>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
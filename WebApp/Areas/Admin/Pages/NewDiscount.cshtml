@model WebApp.Areas.Admin.Pages.NewDiscountModel
@{
}
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Discount.PriceDiscountID" />
            <div class="form-group">
                <label asp-for="Discount.DiscountCode">Kode</label>
                <input asp-for="Discount.DiscountCode" class="form-control" type="text" size="100%" />
                <span class="text-danger" asp-validation-for="Discount.DiscountCode"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount.DiscountValue">Rabat %</label>
                <input asp-for="Discount.DiscountValue" class="form-control" type="number" size="100%" />
                <span class="text-danger" asp-validation-for="Discount.DiscountCode"></span>
            </div>
            <button type="submit" class="btn btn-outline-danger">Gem ændringer</button>
            @*<a asp-area="Admin" asp-page="./Dele" asp-route-id="@Model.Category.CategoryID" class="btn btn-danger">Slet kategori</a>*@
        </form>
    </div>

</div>

@page "{prodID:int?}"
@model WebApp.Areas.Admin.Pages.EditProductModel
@{
    ViewData["Title"] = "Edit";
}


<form method="post">
    <input type="hidden" asp-for="Product.ProductID" />
    <div class="form-group">
        <label asp-for="Product.Name" />
        <input asp-for="Product.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Category.Category" />
        <input asp-for="Product.Category.Category" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Category.Category"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price" />
        <input asp-for="Product.Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Price"></span>
    </div>
    <button type="submit" class="btn btn-info">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}